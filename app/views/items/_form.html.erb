<%=   form_for @item do |f| %>

  <p>
      <%= f.label :name %>
      <%= f.text_field :name, required: true%>
  </p>

  <p>
      <%= f.label :description%>
      <%= f.text_field :description%>
  </p>

  <p>
      <%= f.label :image %>
      <%= f.url_field :image %>
  </p>


  <%= f.submit %>

<% end %>
