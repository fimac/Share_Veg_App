<h1>Login</h1>

<div>
  <div>
    <div>
      <% if flash[:login_error] %>
        <p>
          <%= flash[:login_error] %>
        </p>
      <% end %>

      <%= form_tag "/login" do %>
        <p>
          <%= label_tag :email %>
          <%= email_field_tag :email %>
        </p>
        <p>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </p>

        <button>Submit</button>
      <% end %>
    </div>
  </div>
</div>
