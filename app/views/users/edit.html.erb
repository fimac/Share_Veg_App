<h1>Edit Profile</h1>

<div>
      <% unless @user.errors.full_messages.empty? %>
        <% @user.errors.full_messages.each do |msg| %>
          <p>
            <%= msg %>
          </p>
        <% end %>
      <% end %>

      <%= form_for(@user, :html => { :multipart => true }) do |f| %>
        <p>
          <%= f.label :name %>
          <%= f.text_field :name, required: true %>
        </p>

        <p>
          <%= f.label :email %>
          <%= f.email_field :email, required: true %>
        </p>

        <p>
         <%= f.label :link %>
         <%= f.file_field :link%>
       </p>

       <p>
         <%= f.label :bio %>
         <%= f.text_field :bio, required: true %>
       </p>

       <p>
         <%= f.label :likes %>
         <%= f.text_field :likes, required: true %>
       </p>

       <p>
         <%= f.label :dislikes %>
         <%= f.text_field :dislikes, required: true %>
       </p>

       <p>
         <%= f.label :allergies %>
         <%= f.text_field :allergies, required: true %>
       </p>

    <button class="btn waves-effect waves-light z-depth-0" type="submit" name="action"><%= f.submit %></button>
      <% end %>
</div>
