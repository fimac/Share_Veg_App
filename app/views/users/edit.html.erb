<h1>Edit Profile</h1>

<%= form_for @user, url: "/users/#{@user.id}" do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.date_field :email %>
  </p>
  <%= f.submit %>
<% end %>
